{
	"task_bd":{
		"task_description":{
			"task_name": "boundary_detection",
			"validation_metric_name": "bd_f1",
			"validation_metric_decreases": false,
			"evaluate_on_test": true
		},

		"data_params":{
			"dataset_reader":{
				"type": "bd_json",
				"label_namespace": "json_bd_labels",

				"token_indexers": {
            "bert": {
                "type": "bert-pretrained",
                "do_lowercase": true,
                "pretrained_model": "bert-base-uncased",
                "use_starting_offsets": true
            }
        }
			},


			"train_data_path": "./data/processed_data/ace05/mrc-ner.train.pkl",
			"validation_data_path": "./data/processed_data/ace05/mrc-ner.dev.pkl",
			"test_data_path": "./data/processed_data/ace05/mrc-ner.test.pkl",

			"datasets_for_vocab_creation": ["train","validation","test"]
		}
	},
	"task_ec":{
		"task_description":{
			"task_name": "entity_classify",
			"validation_metric_name": "f1-measure-overall",
			"validation_metric_decreases": false,
			"evaluate_on_test": true
		},

		"data_params":{
			"dataset_reader": {
				"type": "ec_json",
				"token_indexers": {
            "bert": {
                "type": "bert-pretrained",
                "do_lowercase": true,
                "pretrained_model": "bert-base-uncased",
                "use_starting_offsets": true
            }
        }
			},


			"train_data_path": "./data/processed_data/ace05/mrc-ner.train.pkl",
			"validation_data_path": "./data/processed_data/ace05/mrc-ner.dev.pkl",
			"test_data_path": "./data/processed_data/ace05/mrc-ner.test.pkl",

			"datasets_for_vocab_creation": ["train","validation","test"]
		}
	},

	"model": {
		"type": "hmtl",
		"text_field_embedder": {
            "allow_unmatched_keys": true,
            "embedder_to_indexer_map": {
                "bert": [
                    "bert",
                    "bert-offsets"
                ],
                "token_characters": [
                    "token_characters"
                ]
            },
            "token_embedders": {
                "bert": {
                    "type": "bert-pretrained",
                    "pretrained_model": "bert-base-uncased",
                    "requires_grad": true
                }
            }
        },

		"bd": {
			"initializer": [
                    [
                        ".*weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        ".*weight_matrix",
                        {
                            "type": "xavier_normal"
                        }
                    ]
                ],
			"dropout": 0.5,
			"encoder": {
				"type": "lstm",
				"bidirectional": true,
				"input_size": 768,
				"hidden_size": 150,
				"num_layers": 1,
				"dropout": 0.2
			},
			"tagger": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 300,
                    "num_layers": 1
                }
		},
		"ec": {
			 "initializer": [
                    [
                        ".*weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        ".*weight_matrix",
                        {
                            "type": "xavier_normal"
                        }
                    ]
                ],
			"dropout": 0.5,
			"threshold":0.5,
			"encoder": {
				"type": "lstm",
				"bidirectional": true,
				"input_size": 1068,
				"hidden_size": 64,
				"num_layers": 1,
				"dropout": 0.3
			},
			"tagger": {
				"d": 64,
				"l": 64,
				"n_classes": 8,
				"activation": "relu"
			}
		}


	},

	"iterators": {
		"iterator": {
			"type": "basic",
			"batch_size": 10
		},
		"iterator_relation": {
			"type": "basic",
			"batch_size": 10
		}

	},

	"multi_task_trainer": {
		"type": "sampler_multi_task_trainer",
		"sampling_method": "proportional",
		"patience": 10,
		"num_epochs": 50,
		"min_lr": "1e-7",
		"grad_norm": 5.0,
		"grad_clipping": 10.0,
		"cuda_device": 0,
		"optimizer": {
            "type": "bert_adam",
            "lr": 0.001,
            "parameter_groups": [
                [
                    [
                        "_text_field_embedder"
                    ],
                    {
                        "finetune": true,
                        "lr": 5e-05,
                        "t_total": 10000,
                        "warmup": 0.2,
                        "weight_decay": 0.01
                    }
                ]
            ],
            "t_total": 10000,
            "warmup": 0.1,
            "weight_decay": 0
        },
		"scheduler": {
			"type": "reduce_on_plateau",
			"mode": "max",
			"factor": 0.5,
			"patience": 5,
			"threshold": 0.0001,
			"threshold_mode": "abs",
			"verbose": true
		}
	}
}
